@model Ejercicio01.Models.ProfesorViewModel

@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Form</h1>

<h4>ProfesorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <input type="hidden" id="operacion" value="@ViewData["Operaciones"]" />
        <form asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IDProfesor" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="NombreProfesor" class="control-label"></label>
                <input asp-for="NombreProfesor" class="form-control" />
                <span asp-validation-for="NombreProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoProfesor" class="control-label"></label>
                <input asp-for="ApellidoProfesor" class="form-control" />
                <span asp-validation-for="ApellidoProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoProfesor" class="control-label"></label>
                <input asp-for="CorreoProfesor" class="form-control" />
                <span asp-validation-for="CorreoProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        //Cuando la operación sobre el formulario es de lectura.
        $(document).ready(function () {
            if ($("#operacion").val() == "Leer") {
                $("form").find("input, select").attr("disabled", true);
            }
        });
    </script>
}
